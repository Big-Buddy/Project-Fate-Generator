doctype html

html
	head
		title User Profile
		link(rel='stylesheet', href='/vendor/bootstrap.min.css')
		script(type='text/javascript', src='/vendor/jquery.min.js')
		script(type='text/javascript', src='/vendor/jquery.form.min.js')
		script(type='text/javascript', src='/vendor/bootstrap.min.js')
		script(type='text/javascript', src='/js/views/user_prof.js')
		script(type='text/javascript', src='/js/controllers/profileController.js')

	body
		block content
			nav.navbar.navbar-default
				div.container
					div.narbar-header
						a(href='/user_prof')
							img.navbar-brand(src='/img/logo.png', alt='Project Fate Generator')
					div.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li
								button#changePW.navbar-btn.btn-primary(type='button') Change Password
								button#logout.navbar-btn.btn-primary(type='button') Log Out	 									
			div.body-container					
				div.container
					div.row
						div.col-sm-9
							form#userProfile.form-horizontal(method='post')
								div.form-group
									div.col-md-7
										button.btn.btn-success.btn-lg GENERATE SEQUENCE!					
								div.page-header
									h2 Preferences
								p Adjust the preferences below to modify the sequence that is generated.

									div.form-group
										label.col-md-3.control-label Starting Semester
										div.col-md-7
											label.radio-inline
												input#starting_semester_fall(type='radio', name='starting_semester', value='1', checked)
												| Fall
											label.radio-inline
												input#starting_semester_fall(type='radio', name='starting_semester', value='2')
												| Winter		
									div.form-group
										label.col-md-3.control-label Summer Classes?
										div.col-md-7
											label.radio-inline
												input(type='radio', name='summer_opt', id='summer_yes')
												| Yes
											label.radio-inline
												input(type='radio', name='summer_opt', id='summer_no', checked)
												| No
									div.page-header
										h2 Electives
									p Select your desired electives from the lists below.
										div.panel-group#accordion
											div.panel.panel-danger#elective_1
												div.panel-heading
													h4.panel-title
														a(data-toggle='collapse', data-parent='#accordion', href='#elective_1')
															div.pull-left
																span.glyphicon.glyphicon-chevron-down
																|    Science Electives
															div.pull-right
																strong
																	| Choose
																	span#classes-remaining-1 2
																	| more
															div.clearfix
												div.panel-collapse.collapse#electives-list-1(aria-expanded='false')
													ul.list-group
											div.panel.panel-danger#elective_2
												div.panel-heading
													h4.panel-title
														a(data-toggle='collapse', data-parent='#accordion', href='#elective_2')
															div.pull-left
																span.glyphicon.glyphicon-chevron-down
																|    General Electives
															div.pull-right
																strong
																	| Choose
																	span#classes-remaining-2 1
																	| more
															div.clearfix
												div.panel-collapse.collapse#electives-list-2(aria-expanded='false')
													ul.list-group
											div.panel.panel-danger#elective_3
												div.panel-heading
													h4.panel-title
														a(data-toggle='collapse', data-parent='#accordion', href='#elective_3')
															div.pull-left
																span.glyphicon.glyphicon-chevron-down
																|    Program Electives
															div.pull-right
																strong
																	| Choose
																	span#classes-remaining-3 5
																	| more
															div.clearfix
												div.panel-collapse.collapse#electives-list-3(aria-expanded='false')
													ul.list-group
									div.page-header
										h2 Completed Courses
									p Add courses that you've completed to this list to omit them from sequence generation.
									table.table
										thead
											tr
												th Course
												th Type
										tbody
											tr
												td(colspan='2') You have no completed courses.
									div.form-group
										div.col-md-7
											span.twitter-typeadhead(style='display:inline-block; position: relative;')
												input.form-control.tt-hint(type='text', readonly autocomplete='off' spellcheck='false', tabindex='-1', dir='ltr', style='position: absolute; top: 0px; left: 0px;')
												input#add-courses.form-control.tt-input(type='text', placeholder='ex: COMP248', autocomplete='off', spellcheck='false', dir='auto', style='position:relative; vertical-align:top;')
												pre(aria-hidden='true' style='position:absolute; visibility:hidden; white-space:pre;')
												div.tt-menu.tt-empty
													div.tt-dataset.tt-dataset-courses
											button.btn.btn-default Add
							